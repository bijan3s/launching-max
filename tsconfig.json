{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["src/app/controllers/*"],
      "@configs/*": ["./src/configs/*"],
      "src/*": ["./src/*"]
    },

    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*", "index.d.ts"],
  "exclude": ["node_modules", "dist"]
}
